.search{
    width: 330px;
    float: right;
    margin-left: 270px;
}

.srch{
    font-family: 'Times New Roman';
    width: 200px;
    height: 40px;
    background: transparent;
    border: 1px solid purple;
    margin-top: 13px;
    color: #808080;
    border-right: none;
    font-size: 16px;
    float: left;
    padding: 10px;
    border-bottom-left-radius: 10px;
    border-top-left-radius: 5px;
}
.btn{
    width: 100px;
    height: 40px;
    background:purple;
    border: 2px solid pink;
    margin-top: 13px;
    color: #fff;
    font-size: 15px;
    border-bottom-right-radius: 5px;
    border-bottom-right-radius: 5px;
    transition: 0.2s ease;
    cursor: pointer;
}
.btn:hover{
    color: rgb(148, 108, 108);
}

.btn:focus{
    outline: none;
}

.srch:focus{
    outline: none;
}